<h1>This is the books page </h1>

<table border='1'>
    <tr>
        <th>Number</th>
        <th>Title</th>
        <th>Author</th>
        <th>Year Published</th>
    </tr>

    <% @books.each_with_index do |book, index| %>
        <tr>
            <td><%= index + 1%></td>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.year_published %></td>
        </tr>
    <% end %>
</table>